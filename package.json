{
	"name": "@forge42/base-stack",
	"version": "0.0.1",
	"author": "forge-42",
	"private": true,
	"sideEffects": false,
	"license": "MIT",
	"type": "module",
	"scripts": {
		"execute": "tsx",
		"clean": "git clean -fdX --exclude=\"!.env\"",
		"script": "tsx scripts/setup.ts",
		"cleanup": "pnpm run script scripts/cleanup.ts",
		"build": "react-router build",
		"dev": "react-router dev",
		"start": "NODE_ENV=production node ./build/server/index.js",
		"test": "vitest run --browser.headless",
		"test:ui": "vitest",
		"test:cov": "vitest run --coverage --browser.headless",
		"typecheck": "tsc",
		"validate": "pnpm run check && pnpm run typecheck && pnpm run test && pnpm run check:unused",
		"check": "biome check .",
		"check:fix": "biome check --fix .",
		"check:unused": "knip --max-issues 1",
		"check:unused:fix": "knip --fix",
		"typegen": "react-router typegen",
		"postinstall": "pnpm run typegen"
	},
	"dependencies": {
		"@epic-web/client-hints": "1.3.7",
		"@forge42/seo-tools": "1.4.5",
		"@react-router/node": "7.7.0",
		"clsx": "2.1.1",
		"hono": "4.8.4",
		"i18next": "25.3.1",
		"i18next-browser-languagedetector": "8.2.0",
		"i18next-http-backend": "3.0.2",
		"isbot": "5.1.28",
		"pretty-cache-header": "1.0.0",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-i18next": "15.6.0",
		"react-router": "7.7.0",
		"react-router-hono-server": "2.13.0",
		"remix-hono": "0.0.18",
		"remix-i18next": "7.2.1",
		"tailwind-merge": "3.3.1",
		"zod": "3.25.74"
	},
	"devDependencies": {
		"@babel/preset-typescript": "7.27.1",
		"@biomejs/biome": "2.0.6",
		"@dotenvx/dotenvx": "1.45.2",
		"@react-router/dev": "7.7.0",
		"@react-router/fs-routes": "7.7.0",
		"@tailwindcss/vite": "4.1.11",
		"@testing-library/react": "16.3.0",
		"@types/node": "24.0.10",
		"@types/prompt": "1.1.9",
		"@types/react": "19.1.8",
		"@types/react-dom": "19.1.6",
		"@vitest/browser": "3.2.4",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/ui": "3.2.4",
		"babel-plugin-react-compiler": "19.1.0-rc.2",
		"chalk": "5.4.1",
		"happy-dom": "18.0.1",
		"knip": "5.61.3",
		"lefthook": "1.11.16",
		"playwright": "1.53.2",
		"prompt": "1.3.0",
		"react-router-devtools": "5.0.6",
		"tailwindcss": "4.1.11",
		"tsx": "4.20.3",
		"typescript": "5.8.3",
		"vite": "7.0.2",
		"vite-plugin-babel": "1.3.2",
		"vite-plugin-icons-spritesheet": "3.0.1",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "3.2.4",
		"vitest-browser-react": "1.0.0"
	},
	"packageManager": "pnpm@10.12.4",
	"optionalDependencies": {
		"@rollup/rollup-linux-x64-gnu": "^4.44.2"
	},
	"engines": {
		"node": ">=24.3.0",
		"pnpm": ">=10.12.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"esbuild",
			"lefthook",
			"msw"
		]
	}
}
